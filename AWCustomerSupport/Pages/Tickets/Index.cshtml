@page
@model AWCustomerSupport.Pages.Tickets.IndexModel

@{
    ViewData["Title"] = "Tickets";
}

<h1>Tickets</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.NameSort">
                @Html.DisplayNameFor(model => model.Tickets[0].Name)
            </a>
        </th>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.DescriptionSort">
                @Html.DisplayNameFor(model => model.Tickets[0].Description)
            </a>
        </th>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.EntrySort">
                @Html.DisplayNameFor(model => model.Tickets[0].EntryDate)
            </a>
        </th>
        <th>
            <a asp-page="./Index" asp-route-sortOrder="@Model.DeadlineSort">
                @Html.DisplayNameFor(model => model.Tickets[0].Deadline)
            </a>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Tickets) {
        string backgroundColor = IndexModel.GetBackgroundColor(item);
        string textColor = IndexModel.GetTextColor(item);

        <tr style="@backgroundColor; @textColor">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                <a style="@textColor; font-weight: bold" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a style="@textColor; font-weight: bold" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a style="@textColor; font-weight: bold" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
